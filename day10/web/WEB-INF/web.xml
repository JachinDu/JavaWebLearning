<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    配置web应用参数-->
    <context-param>
        <param-name>aaa</param-name>
        <param-value>aaavvv</param-value>
    </context-param>
    <context-param>
        <param-name>bbb</param-name>
        <param-value>bbbvvv</param-value>
    </context-param>
    <context-param>
        <param-name>ccc</param-name>
        <param-value>cccvvv</param-value>
    </context-param>


    <servlet>
        <servlet-name>ServletFirstServlet</servlet-name>
        <servlet-class>a_servlet.ServletFirstServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServletInitDemo1</servlet-name>
        <servlet-class>a_servlet.ServletInitDemo1</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServletConfigDemo</servlet-name>
        <servlet-class>a_servlet.ServletConfigDemo</servlet-class>
        <!-- 初始参数-->
        <init-param>
            <param-name>path</param-name>
            <param-value>/Users/jc/Desktop/djc.txt</param-value>
        </init-param>
        <init-param>
            <param-name>ysl</param-name>
            <param-value>lllll</param-value>
        </init-param>
        <init-param>
            <param-name>djc</param-name>
            <param-value>ddddd</param-value>
        </init-param>
    </servlet>
</web-app>